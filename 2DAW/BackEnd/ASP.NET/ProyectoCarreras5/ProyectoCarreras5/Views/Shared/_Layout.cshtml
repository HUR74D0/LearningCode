<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>

        .red {
            background-color: mediumpurple;
        }

        .nav-pills a {
            color: black;
        }

        

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top red">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Carreras ASP.NET", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
       
            </div>
            <ul class="nav nav-pills">
                <li>@Html.ActionLink("Participantes", "Index", "participantes", new { area = "" }, new { @class = "" })</li>
                <li>@Html.ActionLink("Carreras", "Index", "carreras", new { area = "" }, new { @class = "" })</li>
                <li>@Html.ActionLink("Chips", "Index", "chips", new { area = "" }, new { @class = "" })</li>
                <li>@Html.ActionLink("Subir Archivo", "Index", "subirArchivo", new { area = "" }, new { @class = "" })</li>
            </ul>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Edgar S. Hurtado</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>